<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.joseris.apptaxi.FragmnetsRegistroUsuario.UsuarioNoRegistradoCNE">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_checkflecha"
        app:backgroundTint="@android:color/black"
        app:layout_anchor="@+id/include"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:layout_anchorGravity="bottom|right"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:textAppearance="@style/TextAppearance.FontPath"
            android:text="Â¿Cual es tu nombre?"
            android:textSize="24dp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:id="@+id/textNombre"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp" />

        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/editNombre"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:backgroundTint="@android:color/black"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:hint="Nombre      "
            android:maxLength="8"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/textNombre"
            android:layout_alignStart="@+id/textNombre" />

        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/editApellido"
            android:maxLength="8"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:backgroundTint="@android:color/black"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:hint="Apelllido         "
            android:layout_marginStart="22dp"
            android:layout_alignBaseline="@+id/editNombre"
            android:layout_alignBottom="@+id/editNombre"
            android:layout_toEndOf="@+id/editNombre" />


    </RelativeLayout>


</FrameLayout>
