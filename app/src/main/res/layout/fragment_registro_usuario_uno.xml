<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_marginTop="10dp"
    tools:context="com.example.joseris.apptaxi.FragmnetsRegistroUsuario.RegistroUsuarioUno">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_toLeftOf="@+id/editCedula"
            android:layout_below="@+id/textNombre"
            android:layout_marginTop="9dp"
            android:id="@+id/spinner"
            />

        <ImageView
            android:layout_below="@+id/textNombre"
            android:layout_toRightOf="@+id/editCedula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagviewX"
            android:visibility="invisible"
            android:background="@drawable/ic_close"/>



        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.FontPathMedium"
            android:layout_width="210dp"
            android:textColor="@android:color/black"
            android:text=""
            android:maxLength="8"
            android:ems="10"
            android:id="@+id/editCedula"
            android:layout_below="@+id/textNombre"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text=""
            android:textAppearance="@style/TextAppearance.FontPathRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="21dp"
            android:id="@+id/textViewNombreUsuario"
            android:layout_below="@+id/imageAcercade"
            android:layout_centerHorizontal="true" />

        <Button
            android:text=""
            android:layout_width="50dp"
            android:elevation="8dp"
            android:shadowDy="6"
            android:shadowRadius="1.2"
            android:visibility="invisible"
            android:layout_height="50dp"
            android:background="@drawable/ic_checkic"
            android:id="@+id/buttonIr"
            android:layout_below="@+id/textViewNombreUsuario"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="87dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/acerca"
            android:id="@+id/imageAcercade"
            android:layout_below="@+id/editCedula"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />

        <TextView
            android:text="Por favor introduce tu número de Cédula de identidad."
            android:textSize="21dp"
            android:layout_marginLeft="25dp"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:id="@+id/textNombre"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/include"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:layout_anchorGravity="bottom|right"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_action_search"
            app:backgroundTint="@android:color/black"
            />
    </ScrollView>

</RelativeLayout>
