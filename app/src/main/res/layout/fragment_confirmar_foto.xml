<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joseris.apptaxi.FragmnetsRegistroUsuario.ConfirmarFoto">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#00BCD4"
            >
        </LinearLayout>

        <Button
            android:text="NUEVA FOTO"
            android:textColor="@android:color/darker_gray"
            android:backgroundTint="@android:color/white"
            android:elevation="8dp"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="14dp"
            android:id="@+id/buttonNuevaFoto"
            android:shadowDy="6"
            android:shadowRadius="1.2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
        <Button
            android:text="ACEPTAR"
            android:textColor="@android:color/white"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:id="@+id/buttonAceptarFoto"
            android:layout_alignBottom="@+id/buttonNuevaFoto"
            android:layout_toEndOf="@+id/buttonNuevaFoto"
            android:layout_alignTop="@+id/buttonNuevaFoto"
            android:backgroundTint="#0a091b" />

        <TextView
            android:text="Por favor asegurate de que podamos leer sin problemas todos los datos de la fotografia facilmente."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_below="@+id/linealgriss"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/textView9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:id="@+id/linealgriss"
            android:background="@color/wallet_dim_foreground_inverse_holo_dark"
            android:layout_alignParentStart="true">
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imagencedulaconfirmar"/>
        </LinearLayout>


    </RelativeLayout>
</FrameLayout>
