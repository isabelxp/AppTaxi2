<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context="com.example.joseris.apptaxi.FragmnetsRegistroUsuario.FotografiaUsuario">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:popupTheme="@style/Theme.AppCompat.Light"
        android:minHeight="?attr/actionBarSize"
        android:background="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="UnusedAttribute"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_above="@+id/buttonfoto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:background="#E0E0E0"
            android:id="@+id/linearLayout">
        </LinearLayout>



        <Button

            android:text="SUBIR FOTOGRAFIA"
            android:textSize="18dp"
            android:textColor="@color/tw__solid_white"
            android:drawableLeft="@drawable/ic_camera_alt"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:id="@+id/buttonfoto"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/cast_expanded_controller_background_color" />

        <TextView
            android:text="Recuerda, en la fotografia tomada debe aparecer tu cara para que el conductor pueda reconocerte facilmente al momento de solicitar un servicio."
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="12dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_above="@+id/imagecedula"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_height="180dp"
            android:src="@drawable/perfil_pic"
            android:id="@+id/imagecedula"
            android:layout_marginBottom="34dp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Sube una fotografia de tu perfil"
            android:textSize="28dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            style="@android:style/Widget.Holo.TextView"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:layout_above="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp" />

    </RelativeLayout>

</FrameLayout>
