<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.joseris.apptaxi.FragmnetsRegistroUsuario.RegistroUsuarioTres">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_checkflecha"
        app:backgroundTint="@android:color/black"
        app:layout_anchor="@+id/include"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:layout_anchorGravity="bottom|right"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/fondo_perfil_usuario"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="62dp"
            android:scaleType="fitXY"
            android:id="@+id/imagefotousuario" />
        <LinearLayout
            android:layout_below="@id/imagefotousuario"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:id="@+id/linearLayout">
        </LinearLayout>

                  <Spinner
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_toLeftOf="@+id/editnumerotelefo"
                   android:layout_alignBottom="@+id/editnumerotelefo"
                   android:id="@+id/spinner2"
                    />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_correo"
            android:layout_width="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColorHint="@android:color/black"
                android:backgroundTint="@android:color/black"
                android:hint="Correo electronico"
                android:textColor="@android:color/black"
                android:layout_marginStart="40dp"
                android:layout_marginTop="21dp"
                android:id="@+id/editCorreo"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_below="@+id/input_layout_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginStart="40dp"
                android:ems="10"
                android:backgroundTint="@android:color/black"
                android:hint="ContraseÃ±a"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:id="@+id/editContrasena"
                android:layout_below="@+id/editCorreo"
                android:layout_alignStart="@+id/editCorreo" />
        </android.support.design.widget.TextInputLayout>

        <EditText
         android:layout_width="180dp"
         android:layout_height="wrap_content"
         android:inputType="number"
         android:ems="10"
         android:textColor="@android:color/black"
         android:id="@+id/editnumerotelefo"
         android:layout_marginTop="11dp"
         android:layout_below="@+id/input_layout_password"
         android:layout_alignStart="@+id/textView8" />

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/imagviewX"
             android:layout_alignBottom="@+id/spinner2"
             android:layout_toRightOf="@+id/editnumerotelefo"
             android:visibility="invisible"
             android:background="@drawable/ic_close"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/venezuela"
            android:id="@+id/imageView3"
            android:layout_weight="1"
            android:layout_alignBottom="@+id/spinner2"
            android:layout_toStartOf="@+id/spinner2" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/foto_option_transparente"
            android:id="@+id/imageView4"
            android:layout_above="@+id/linearLayout"
            android:layout_alignStart="@+id/spinner2"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="63dp" />

        <TextView
            android:text="SUBIR FOTOGRAFIA USUARIO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:layout_marginTop="26dp"
            android:id="@+id/textView8"
            android:fontFamily="monospace"
            android:layout_marginEnd="65dp"
            android:layout_alignTop="@+id/imageView4"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</FrameLayout>
